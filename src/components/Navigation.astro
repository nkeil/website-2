---
interface Props {
  current: string;
  row?: boolean;
}

const { current, row } = Astro.props;

const elements = [
  { label: 'About', value: 'about', link: '/about' },
  { label: 'Projects', value: 'projects', link: '/projects' },
  { label: 'Blog', value: 'blog', link: '/blog' },
  { label: 'GitHub', link: 'https://github.com/nkeil' },
  { label: 'Twitter', link: 'https://x.com/nickkeilhere' },
];
---

<ul class={'container ' + (row ? 'row' : '')}>
  {
    elements.map((element) => (
      <li class={'nav-element ' + (element.value === current ? 'current' : '')}>
        <a
          href={element.link}
          target={element.link.startsWith('http') ? '_blank' : ''}
        >
          {element.label}
        </a>
      </li>
    ))
  }
</ul>

<style>
  .container {
    font-family: 'Franklin Gothic', sans-serif;
    font-size: 3rem;
    text-transform: uppercase;
    letter-spacing: -0.125em;
    line-height: 45px;

    &.row {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-element {
    text-decoration: none;
    transform: rotate(-0.9deg);
  }

  .current {
    text-decoration: underline;
    text-decoration-thickness: 2px;
  }
</style>

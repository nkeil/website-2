---
import { bgImage } from '../utils/background-image';

interface Props {
  value: string;
}

const { value } = Astro.props;
---

<div class="container">
  <div class="box">
    <h1 style={`background-image: url(${bgImage.src})`}>
      {value}
    </h1>
  </div>
</div>

<style>
  .box {
    background-color: var(--black);
    width: fit-content;
    padding: 10px 30px 5px 15px;
    margin-inline: auto;

    transform: rotate(0.66deg);
  }

  h1 {
    font-family: 'Franklin Gothic', sans-serif;
    font-size: 3rem;
    font-weight: normal;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: -0.08em;
  }
</style>
